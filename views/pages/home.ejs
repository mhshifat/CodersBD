<section id="home">
  <div class="intro-back">
    <div class="intro-overlay">
      <h1 class="animated fadeInLeft">Hi, I am Mehedi Hassan Shifat</h1>
      <h5 class="animated fadeInRight">FULL STACK WEB DEVELOPER</h5>
      <a class="animated fadeInUp" href="">Learn more</a>
    </div>
  </div>
  <div class="services">
    <div class="content-title">
      <h1 class="wow fadeInDown" data-wow-duration="1s" data-wow-delay="1s">Services</h1>
      <span></span>
    </div>
    <div class="services-card-box wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
      <!-- Service Card 1 -->
      <div class="services-card">
        <div class="services-icon">
          <i class="fas fa-paint-brush fa-3x"></i>
        </div>
        <div class="services-title">
          <h4>Web Design</h4>
          <p>I am passionate about website design.</p>
        </div>
      </div>
      <!-- Service Card 2 -->
      <div class="services-card">
        <div class="services-icon">
          <i class="fas fa-laptop fa-3x"></i>
        </div>
        <div class="services-title">
          <h4>Web Development</h4>
          <p>I use NodeJS as my backend, but i know php & python too.</p>
        </div>
      </div>
      <!-- Service Card 3 -->
      <div class="services-card">
        <div class="services-icon">
          <i class="fas fa-tablet fa-3x"></i>
        </div>
        <div class="services-title">
          <h4>Mobile App</h4>
          <p>I can help you to make your desired mobile app for you.</p>
        </div>
      </div>
      <!-- Service Card 4 -->
      <div class="services-card">
        <div class="services-icon">
          <i class="fas fa-search fa-3x"></i>
        </div>
        <div class="services-title">
          <h4>Seo Optimization</h4>
          <p>All of our web design is seo friendly and responsive.</p>
        </div>
      </div>
      <!-- Service Card 5 -->
      <div class="services-card">
        <div class="services-icon">
          <i class="fas fa-edit fa-3x"></i>
        </div>
        <div class="services-title">
          <h4>UX/Ui Design</h4>
          <p>I can design a beautiful mobile interface for your mobile app.</p>
        </div>
      </div>
      <!-- Service Card 5 -->
      <div class="services-card">
        <div class="services-icon">
          <i class="fas fa-life-ring fa-3x"></i>
        </div>
        <div class="services-title">
          <h4>Support</h4>
          <p>We offer 24/7 customer support on every project</p>
        </div>
      </div>
    </div>
  </div>
  <div class="about-codersbd">
    <div class="left-side wow zoomIn" data-wow-duration="1s" data-wow-delay=".5s">
      <h3>About CodersBD</h3>
      <span></span>
      <p>We believe in Simple, Clean & Modern Design Standards with Responsive Approach. Browse the amazing work of our company.</p>
      <a href="/projects">Our Work</a>
    </div>
    <div class="right-side">
      <div class="bg-overlay"></div>
    </div>
  </div>
  <div class="projects">
    <div class="content-title">
      <h1 class="wow fadeInDown" data-wow-duration="1s" data-wow-delay=".5s">My Projects</h1>
      <span></span>
    </div>
    <div class="projects-card-box wow fadeInUp">
      <!-- Projects Card 1 -->
      <% if(projects.length> 0 ) { %>
        <% projects.forEach(project => { %>
          <div class="project-card">
            <a href="/projects/<%= project.project %>"><img src="/projects/<%= project.project %>" alt="projects name" title=""></a>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
  <div class="recent-posts">
    <div class="content-title">
      <h1 class="wow fadeInDown" data-wow-duration="1s" data-wow-delay=".1s">Resent Posts</h1>
      <span></span>
    </div>
    <div class="recent-posts-box wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
    <!-- Recent Post 1 -->
    <% if (posts.length > 0) { %>
      <% posts.forEach(post => { %>
        <% if (post.status === 'Published') { %>
          <div class="recent-posts-card">
            <span class="cat-header"><i class="fas fa-th-list"></i><span class="span"><%= post.category %></span></span>
            <div class="recent-post-image">
              <img src="/uploads/<%= post.image %>" alt="post image" title="<%= post.title %>">
            </div>
            <div class="recent-post-author">
              <h5>By, <%= post.author %> - <%= post.date %></h5>
            </div>
            <div class="recent-post-title">
              <h4><%= post.title %></h4>
            </div>
            <div class="recent-post-desc">
              <%- post.content.substr(3, 400) %>...
            </div>
            <div class="recent-post-link">
              <a href="/blogs/<%= post.slug %>">Read more</a>
            </div>
          </div>
        <% } %>
      <% }) %>
    <% } %>
    </div>
  </div>
  <div class="newsletter">
    <div class="news-overlay">
      <div class="news-content wow zoomIn" data-wow-duration="1s" data-wow-delay=".5s">
        <div class="news-logo">
          <img src="/website/code-cyan.svg" alt="logo" title="CodersBD">
        </div>
        <div class="news-header">
          <h1><span>Join Our </span>Newsletter!</h1>
        </div>
        <div class="form-box">
          <form action="">
            <input type="email" name="newsletter" class="news-input" placeholder="Enter Email">
            <button type="submit" class="news-btn">Join</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="want">
    <h2 class="wow fadeInDown" data-wow-duration="1s" data-wow-delay=".5s">Want to work together?</h2>
    <p class="wow zoomIn" data-wow-duration="1s" data-wow-delay=".5s">I am currently accepting new projects and would love to hear about yours. Please take a few minutes to tell me about it.</p>
    <a class="wow fadeInUp" data-wow-duration="1s" data-wow-delay=".5s" href="/contact">Get Started</a>
  </div>
</section>

