<div id="display">
  <div class="overlay">
    <div class="inner-content-box">
      <h2 class="animated fadeInDown">Login</h2>
      <span class="animated zoomIn"></span>
      <form action="/login" method="POST" class="dis-form">
        <input type="email" name="email" class="dis-input" placeholder="Email">
        <div class="inner-input-box">
          <input type="password" name="password" class="dis-input-inner" placeholder="Password">
          <div class="dis-btn">
            <button type="submit" class="animated shake"><i class="fas fa-paper-plane fa-2x"></i></button>
          </div>
        </div>
      </form>
      <a href="/forgot-password" class="dis-link animated fadeInUp">♡ Forgot Your Password! ♡</a>
    </div>
  </div>
</div>
